@using TPCWare.XmasDev.Models

<div class="row">
@foreach (var xmasCard in XmasCardList)
{
    <div class="col-sm-6 pb-4">
        <div class="card">
            <img class="card-img-top" src="@xmasCard.Url" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">@xmasCard.Title</h4>
                <p class="card-text">@xmasCard.Description</p>
            </div>
        </div>
    </div>
}
</div>

@functions {
[Parameter]
XmasCard[] XmasCardList { get; set; }
}